@page "/roomavailable1"



@using MudBlazor


<MudContainer>
    <MudText Typo="Typo.h2">Room Available</MudText>
    <MudForm>
        <MudTextField Label="Rent" InputType="InputType.Number" Id="rent" @bind-Value="@rent"></MudTextField>
        <MudSelect Label="Gender" @bind-Value="@gender">
            <MudSelectItem Value="@("Female")" />
            <MudSelectItem Value="@("Male")" />
            <MudSelectItem Value="@("Not Specified")" />
        </MudSelect>
        <MudTextField Label="Bedrooms" InputType="InputType.Number" Id="bedrooms" @bind-Value="@bedrooms"></MudTextField>
        <MudTextField Label="How many roommates" InputType="InputType.Number" Id="roommates" @bind-Value="@roommates"></MudTextField>
        <MudTextField Label="Address" Id="address" @bind-Value="@address"></MudTextField>
        <MudSelect Label="Furnished" @bind-Value="@furnished">
            <MudSelectItem Value="@("Fully furnished")"/>
            <MudSelectItem Value="@("Partially furnished")"/>
            <MudSelectItem Value="@("Not Furnished")" />
        </MudSelect>
        <MudTextField Label="Description" Id="description" @bind-Value="@description" Lines="1"></MudTextField>
        <MudCheckBox Label="I accept " @bind-Checked="@agreement">
             <MudNavLink Href="/Terms">the Terms of Use & Privacy Policy.</MudNavLink>
        </MudCheckBox>
        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Post</MudButton>
    </MudForm>
</MudContainer>

@code {
    private string rent;
    private string gender;
    private string bedrooms;
    private string roommates;
    private string address;
    private string furnished;
    private string description;
    private bool agreement;
}